
RewriteEngine On

# Allow requests for specific resources like fonts or scripts
RewriteCond %{REQUEST_URI} ^/scripts/fa/550/webfonts/.*$ [OR]
RewriteCond %{REQUEST_URI} ^/path-to-your-allowed-resources/.*$
RewriteRule .* - [L]

# Redirect all other requests to maintenance mode
RewriteCond %{REQUEST_URI} !^/maintenance.html$
RewriteRule .* - [R=503,L]

# Error page for 503
ErrorDocument 503 /maintenance.html

# Add CORS headers for allowed resources
<IfModule mod_headers.c>
    <FilesMatch "\.(woff2|woff|ttf|eot|css|js)$">
        Header set Access-Control-Allow-Origin "https://debug.unix.com"
        Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
        Header set Access-Control-Allow-Headers "Content-Type"
    </FilesMatch>
</IfModule>
